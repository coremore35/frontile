{
  "extends": "@ember/app-tsconfig",
  "include": [
    "app", "tests", "types"
  ],
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ]
  },
  "compilerOptions": {
    "allowJs": true,
    "paths": {
      "site/tests/*": [
        "./tests/*"
      ],
      "site/*": [
        "./app/*"
      ],
      "*": [
        "./types/*"
      ]
    },
    "types": [
      "ember-source/types",
      "@embroider/core/virtual",
      "vite/client"
    ]
  },
}
